<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:id="@+id/v_go_back"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <!--            <org.hugoandrade.calendarviewlib.CalendarView-->
            <!--                android:id="@+id/cv_select_date"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                app:current_day_circle_enable="true"-->
            <!--                app:current_day_circle_color="@color/colorPrimary"-->
            <!--                app:month_header_arrows_color="@color/colorPrimary"-->
            <!--                app:month_header_text_color="@color/colorPrimary"-->
            <!--                app:selected_day_border_color="#00000000"-->
            <!--                app:week_header_text_color="@color/colorPrimary"-->
            <!--                app:week_header_background_color="#00000000"-->
            <!--                app:week_header_movable="false"/>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="2dp"
                android:background="#ccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.org.godspeed.calender.uihelpers.NumberPicker
                    android:id="@+id/np_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:np_dividerThickness="0dp"
                    app:np_formatter="%02d"
                    app:np_max="23"
                    app:np_min="0"
                    app:np_selectedTextColor="@color/colorPrimary"
                    app:np_selectedTextSize="32sp"
                    app:np_selectedTypeface="sans-serif-condensed"
                    app:np_textColor="@color/colorPrimary"
                    app:np_textSize="28sp"
                    app:np_typeface="sans-serif-light"
                    app:np_wheelItemCount="5"
                    app:np_wrapSelectorWheel="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="@string/double_dots"
                    android:textColor="@color/colorPrimary"
                    android:textSize="28sp" />

                <com.org.godspeed.calender.uihelpers.NumberPicker
                    android:id="@+id/np_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:np_dividerThickness="0dp"
                    app:np_formatter="%02d"
                    app:np_max="59"
                    app:np_min="0"
                    app:np_selectedTextColor="@color/colorPrimary"
                    app:np_selectedTextSize="32sp"
                    app:np_selectedTypeface="sans-serif-condensed"
                    app:np_textColor="@color/colorPrimary"
                    app:np_textSize="28sp"
                    app:np_typeface="sans-serif-light"
                    app:np_wheelItemCount="5"
                    app:np_wrapSelectorWheel="true" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="#ccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/cancel"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <androidx.legacy.widget.Space
                    android:layout_width="40dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/tv_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/set"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>