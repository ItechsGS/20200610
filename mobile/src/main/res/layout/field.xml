<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Mn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rLayoutDivider22"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rLAyoutForstartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rLayoutDivider11"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Class Start Time"
                android:textColor="@color/textColorYellow"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewstart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="00:00"
                android:textColor="@color/textWhite"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rLAyoutForEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rLayoutDivider11"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Class End Time"
                android:textColor="@color/textColorYellow"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewEnd"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="00:00"
                android:textColor="@color/color_white"
                android:textSize="18sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/AddTime"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/minus"
            android:tint="@color/color_white" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/subHeaderColor1" />
</LinearLayout>