<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/lyt_menu_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"

        android:gravity="center_vertical"
        android:paddingTop="13dp"
        android:paddingRight="5dp"
        android:paddingBottom="13dp">


        <ImageView
            android:id="@+id/img_menu_item"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter" />


        <TextView
            android:id="@+id/txt_menu_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/img_menu_item"
            android:textColor="@color/textColorYellow"
            android:textSize="@dimen/drawer_items_text_size" />

        <LinearLayout
            android:id="@+id/social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_toRightOf="@+id/txt_menu_item_name"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:src="@drawable/fb_logo" />

            <ImageView
                android:id="@+id/insta"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="2dp"

                android:src="@drawable/insta_logo"
                android:textColor="@color/textColorYellow" />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="2dp"

                android:src="@drawable/twitter_logo"
                android:textColor="@color/textColorYellow"
                android:textSize="@dimen/drawer_items_text_size" />
        </LinearLayout>

        <!-- <TextView
             android:id="@+id/txt_count"
