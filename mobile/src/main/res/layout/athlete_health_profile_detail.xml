<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/lLayoutAthName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">


        <RelativeLayout
            android:id="@+id/rLayoutForHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rLayoutForHeight"
            android:layout_marginTop="3dp"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/rlayoutforheightOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewHeightValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:singleLine="true"
                        android:text="-"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_grid_palyer_name" />

                    <TextView
                        android:id="@+id/textViewIn"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/textViewKGValue"
                        android:paddingTop="7dp"
                        android:singleLine="true"
                        android:text="@string/kg"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="@dimen/small_textsize" />

                    <ImageView
                        android:id="@+id/imgViewH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@+id/textViewKg"
                        android:singleLine="true"
                        android:src="@drawable/down_arrow"
                        android:text="@string/kg"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_size_grid_item_name"
                        android:tint="@color/textColorYellow"
                        android:visibility="gone" />
                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/textViewHeightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlayoutforheightOptions"
                android:hint="@string/height"
                android:singleLine="true"
                android:textColor="#6D6D6D"
                android:textSize="@dimen/text_size_grid_item_name" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rLayoutForKG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rLayoutForHeight"
            android:layout_marginTop="3dp"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/rlayoutforweightOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewKGValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:singleLine="true"
                        android:text="-"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_grid_palyer_name" />

                    <TextView
                        android:id="@+id/textViewKg"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/textViewKGValue"
                        android:paddingTop="7dp"
                        android:singleLine="true"
                        android:text="@string/kg"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="@dimen/small_textsize" />

                    <ImageView
                        android:id="@+id/imgViewKg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@+id/textViewKg"
                        android:singleLine="true"
                        android:src="@drawable/down_arrow"
                        android:text="@string/kg"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_size_grid_item_name"
                        android:tint="@color/textColorYellow" />
                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/textViewKgText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlayoutforweightOptions"
                android:hint="@string/weight"
                android:singleLine="true"
                android:textColor="#6D6D6D"
                android:textSize="@dimen/text_size_grid_item_name" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lLayoutAthName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="2">


        <RelativeLayout
            android:id="@+id/rLayoutForSMM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rLayoutForHeight"
            android:layout_marginTop="3dp"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/rlayoutforsOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView1Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:singleLine="true"
                        android:text="-"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_grid_palyer_name" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/textViewKGValue"
                        android:paddingTop="7dp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/small_textsize" />


                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/textView1Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlayoutforsOptions"
                android:hint="@string/smm"
                android:singleLine="true"
                android:textColor="#6D6D6D"
                android:textSize="@dimen/text_size_grid_item_name" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rLayoutForBodyFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rLayoutForHeight"
            android:layout_marginTop="3dp"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/rlayoutforBOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView2Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:singleLine="true"
                        android:text="-"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_grid_palyer_name" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/textViewKGValue"
                        android:paddingTop="7dp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/small_textsize" />


                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/textView2Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlayoutforBOptions"
                android:hint="@string/body_fat"
                android:singleLine="true"
                android:textColor="#6D6D6D"
                android:textSize="@dimen/text_size_grid_item_name" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>