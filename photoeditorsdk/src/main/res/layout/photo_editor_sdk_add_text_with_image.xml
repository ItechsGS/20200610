<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_editor_sdk_image_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/photo_editor_sdk_text_image"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"

        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/photo_editor_sdk_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo_editor_sdk_text_image"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:fontFamily="@font/agencyr"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="17sp" />

</RelativeLayout>